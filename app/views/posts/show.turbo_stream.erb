<%= turbo_stream.append :post_comments do %>
  <%= render @post_comments %>
<% end %>

<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :pagination,
                        loading: :lazy,
                        src: post_path(@post, format: :turbo_stream, page: @pagy.next) %>
  <% end %>
<% end %>