<article class="media">
  <div class="media-content">
    <div id="<%= dom_id post %>">
      <div class="">
        <%= render partial: 'users/shared/profile_avatar', locals: {user: post.user}%>
        <%= link_to post.user.username, user_path(post.user), data: {turbo: false} %>
        <time datetime="<%= post.created_at.iso8601 %>"><%= post.created_at.strftime("%b %d, %Y") %></time>
      </div>
      <p>
        <%= post.body %>
      </p>
    </div>
  
    <nav class="level is-mobile">
      <div class="level-left">
        <%= render partial: 'posts/count_comments_likes', locals: {post: post} %>
        <div class="level-item">
          <% unless defined?(show_view) %>
            <%= link_to "View", post_path(post), target: '_top' %>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</article>
