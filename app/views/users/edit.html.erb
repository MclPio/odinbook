User#edit
<%= render "users/shared/errors" %>
<%= form_with model: @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :bio %>
  <%= form.text_area :bio %>

  <%= form.label :avatar_url %>
  <%= form.text_field :avatar_url %> <%# validation needed, nil unacceptable...%>

  <%= form.submit "Save" %>
<% end %>