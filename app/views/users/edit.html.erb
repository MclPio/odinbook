User#edit
<%= form_with model: @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :bio %>
  <%= form.text_area :bio %>

  <%= form.label :profile_image_url %>
  <%= form.text_field :profile_image_url %> <%# validation needed, nil unacceptable...%>

  <%= form.submit %>
<% end %>