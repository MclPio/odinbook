<% @users.each do |user| %>
  <div>
    <% if current_user == user %>
      <% next %>
    <% else %>
      <%= user.username %>
      <% if current_user.followees.include?(user)%>
        <% if current_user.followee_follows.find_by(followee_id: user.id).approved == false %>
          <p>request sent</p>
        <% else %>
          <p>following</p>
          <%# implement unfollow button %>
        <% end %>
      <% else %>
        <%= form_with scope: :follow, url: follows_path do |form| %>
          <%= form.hidden_field :follower_id, value: current_user.id %>
          <%= form.hidden_field :followee_id, value: user.id %>
          <%= form.submit "Follow" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>