<% if current_user %>
  <h3><%= current_user.email %></h3>
  <h3><%= current_user.full_name %></h3>
  <h3><%= current_user.uid %></h3>
  <h3><%= current_user.provider %></h3>
  <h3><%= current_user.username %></h3>
  <%= link_to "Edit account", edit_user_registration_path %>
  <%= button_to "Sign out", destroy_user_session_path, data: { turbo: "false" }, method: :delete %>
<% else %>
  <%= link_to "Create account", new_user_registration_path %>
  <p>or</p>
  <%= form_for "Login",
  url: "/users/auth/google_oauth2",
  method: :post,
  data: { turbo: "false" } do |f| %>
    <%= f.submit "Login", type: "image", src: url_for("/assets/web_light_rd_SU@1x.png") %><br />
  <% end %>
  <p>Already have an account?</p>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>
