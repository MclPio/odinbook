<div class="container">
  <div class="level">
    <h4 class="title is-4">Edit <%= resource_name.to_s.humanize %> Account</h4>
    <%= link_to "Back", :back, class: "button is-link" %>
  </div>
  
  <div class="column is-half">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email, class:"label" %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
        </div>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :password, class:"label" %> <i>(leave blank if you don't want to change it)</i>
        <div class="control">
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        </div>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <div class="control">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        </div>
      </div>
    
      <div class="field">
        <%= f.label :current_password, class: "label" %> <i>(we need your current password to confirm your changes)</i>
        <div class="control">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
        </div>
      </div>
    
      <div class="actions field">
        <div class="control"><%= f.submit "Update", class: "button is-primary mt-4" %></div>
      </div>
    <% end %>
    
    <div class="mt-4">
      <div class="container">
        <div class="message is-danger">
          <div class="message-body">
            <h4 class="title is-4">Unhappy?</h4>
            <p>Cancel account, note that this can not be undone.</p>
          </div>
        </div>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button is-danger mt-4" %>
      </div>
    </div>

    <div class="mt-4">
      <div class="container">
        <h4 class="title is-5 mb-2">Color Theme</h4>
        <div class="buttons has-addons" data-controller="theme">
          <button class="button" data-action="click->theme#light" data-theme-target="light">Light</button>
          <button class="button" data-action="click->theme#dark" data-theme-target="dark">Dark</button>
        </div>
      </div>
    </div>
  </div>
</div>