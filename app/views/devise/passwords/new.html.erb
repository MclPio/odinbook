<div class="columns">
  <div class="column">
    <h2 class="title is-5">Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "box" }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      </div>
    
      <div class="field">
        <div class="control">
          <%= f.submit "Send me reset password instructions", class: "button is-primary is-fullwidth" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
